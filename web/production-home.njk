---
layout: layouts/html.njk
data: getYear
templateClass: home
tags: home
pagination:
  alias: page
  data: pages
  size: 1
eleventyExcludeFromCollections: true
permalink: "/{{ page.links.local | slug }}/index.html"
---
<div id="form" class="container-inner_col content-container">

    <div class="grid-row top-copy">
      <div class="left-col">
        {{ page.main | markdownify | safe }}
      </div>
      <div class="right-col">
          <div class="form-container">
            <h3>{{ page.description }}</h3>
            <p class="instructions">To learn more, fill out the form below and weâ€™ll respond within one business day, or call <a href="tel:{{ page.contact.phone }}">{{ page.contact.phone }}</a>.
            <form name="contact" method="POST" data-netlify="true" action="thankyou.html">
              <p>
                <label>First Name:<br>
                <input type="text" name="name-first" required /></label>   
              </p>
              <p>
                <label>Last Name:<br>
                <input type="text" name="name-last" required /></label>   
              </p>
              <p>
                <label>Phone Number:<br>
                <input type="tel" name="phone" required /></label>
              </p>
              <p>
                <label>Email Address:<br>
                <input type="email" name="email" /></label>
              </p>
              <p>
                <label>
                  How would you like to be contacted?<br>
                  <input type="radio" name="followup" value="email" required> Email<br>
                  <input type="radio" name="followup" value="call" checked> Phone Call<br>
                </label>
              </p>
              <p>
                <label><input type="checkbox" name="subscribe" value="yes" checked> Please send me updates from {{ page.owner }}</label>
              </p>
              <div data-netlify-recaptcha="true"></div>
              <p>
                <button type="submit">Request Appointment</button>
              </p>
            </form>
          </div>
      </div>
    </div>

    <div class="grid-row teaser-copy">
      <div class="left-col">
        {{ page.lftCol | markdownify | safe }}
      </div>
      <div class="right-col">
        {{ page.rtCol | markdownify | safe }}
      </div>
    </div>

</div>
