  <body class="main {{ page.links.local | slug }}">

    <!-- Google Tag Manager (noscript) -->
      <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id={{ page.analytics.tmId }}" height="0" width="0" style="display:none; visibility:hidden"></iframe>
      </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <header>
      <div class="container-inner_col">
        <div class="grid-row">
          <div class="grid-2-3">
            <a href="index.html"><img class="header-logo" src="{{ page.logoSrc }}" alt="{{ page.logoAlt }}"></a>
          </div>
          <div class="grid-1-3">
            <h3 class="header-tagline">Call for an Appointment<br><a class="phone" href="tel:{{ page.contact.phone }}">{{ page.contact.phone }}</a></h3>
          </div>
        </div>
      </div>
    </header>

    <div class="full-width {% if templateClass %}{{ templateClass }}{% endif %} rm_margins">

      {{ content | safe }}

      <div class="full-width cta-band_call">
        <div class="grid-row">
          <h3>Call for an Appointment: <a href="tel:{{ page.contact.phone }}">{{ page.contact.phone }}</a></h3>
        </div>
      </div>

      <div class="container-inner_col content-container">
        <div class="grid-row location-container">
          <div class="grid-1-3 location-addr">
            <h3>Location</h3>
            <p>
              <strong>
                {{ page.owner }}
              </strong><br>
              {% for ln in page.contact.addr %}
                {{ ln }}<br>
              {% endfor %}
            </p>
            <p><a href="tel:{{ page.contact.phone }}">{{ page.contact.phone }}</a></p>
          </div>
          <div class="grid-2-3 location-map">
            <iframe src="{{ page.contact.map }}" allowfullscreen=""></iframe>
          </div>
        </div>
      </div>  
    </div>

    <footer class="full-width">
      <div class="container-inner_col">
        <div class="grid-row">
          <div class="grid-1-6">
            <img src="https://www.uhsinc.com/wp-content/uploads/2020/01/uhs_footer-logo.png" alt="Universal Health Services, Inc." />
          </div>
